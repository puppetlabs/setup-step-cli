{
  "name": "puppetlabs-setup-step-cli",
  "version": "1.1.2",
  "private": true,
  "description": "A custom GitHub Action that sets up the Smallstep step-cli tool",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puppetlabs/setup-step-cli.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Jake Spain <jake.spain@pupept.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/request": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "@typescript-eslint/parser": "^5.32.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.21.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^27.0.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.7.4"
  }
}
